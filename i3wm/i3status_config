general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "wireless _first_"
order += "volume master"
order += "battery all"
order += "tztime local"

wireless _first_ {
    format_up = "%essid (%quality at %ip)"
    format_down = "no wifi"
}

volume master {
    format = "%volume"
    device = "default"
    mixer = "Master"
}

battery all {
    format = "%percentage %status"
    low_threshold = 20
    threshold_type = percentage
    format_down = "No battery"
}

tztime local {
    format = "%Y-%m-%d %H:%M"
}
